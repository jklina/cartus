.mb-4.shadow-lg
- if post.images.present?
  = link_to(image_tag(url_for(post.preview_image), class: "preview-image rounded-t"), post_path(post))
  .bg-gray-300.border-r.border-l.border-dotted.border-gray-600.flex
    = render partial: "shared/post/post_body", locals: {post: post}
  = render partial: "shared/post/post_footer", locals: {post: post}
- else
  .bg-gray-300.border-t.border-r.border-l.border-dotted.border-gray-600.rounded-t.flex
    = render partial: "shared/post/post_body", locals: {post: post}
  = render partial: "shared/post/post_footer", locals: {post: post}
