#clearance.sign-in.flex.h-screen
  %div.flex-1.flex.h-screen.bg-indigo-300
    .m-auto
      %h2= t(".title")
  %div.flex-1.flex.h-screen.bg-indigo-800
    .m-auto
      .shadow-lg
        .m-auto.pt-10.px-16.bg-gray-100.rounded-t-lg.pb-6.border-b.border-gray-600
          %h4.text-center.text-indigo-800.text-2xl.pb-4= t(".heading")
          = form_for @user do |form|
            .text-field.py-3
              = form.text_field :email, type: 'email', class: "bg-indigo-200 border-b-2 border-indigo-300 text-indigo-800 p-3 rounded w-full outline-none"
            .password-field.py-3
              = form.password_field :password, class: "bg-indigo-200 border-b-2 border-indigo-300 text-indigo-800 p-3 rounded w-full outline-none"
            .submit-field
              = form.button t(".submit_button"), class: "block w-full mt-4 py-2 border-2 border-indigo-800 rounded-lg text-indigo-800 font-bold"
        .m-auto.h-16.px-16.rounded-b-lg.bg-gray-300.flex
          .m-auto.align-center
            = link_to t(".sign_in"), sign_in_path, class: "text-indigo-800"
            = " | "
            = link_to t(".forgot_password"), new_password_path, class: "text-indigo-800"
