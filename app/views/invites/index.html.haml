.container.lg.mx-auto.px-5.min-h-screen.py-5
  .min-h-screen
    %h3.text-3xl Invites
    %h4.text-2xl Received Invites
    - @received_invites.each do |invite|
      .received-invitation.px-4.py-4
      .received-invitation.px-4.py-4.h-20.flex.justify-between{ class: cycle("", "bg-gray-400")}
        .info
          = image_tag(url_for(invite.relatee.post_thumbnail_url), class: "h-12 rounded-full inline-block mr-4")
          %span= invite.relatee.full_name
        .actions
          = link_to "Decline", invite_path(invite), method: :delete, class: "inline-block py-2 px-4 border-2 border-red-800 rounded-lg text-red-800 font-bold"
          = link_to "Accept", invite_path(invite), method: :patch, class: "inline-block py-2 px-4 border-2 border-indigo-800 rounded-lg text-indigo-800 font-bold"
    %h4.text-2xl Sent Invites
    - @sent_invites.each do |invite|
      .sent-invitation.px-4.py-4.h-20.flex.justify-between{ class: cycle("", "bg-gray-400")}
        .info
          = image_tag(url_for(invite.related.post_thumbnail_url), class: "h-12 rounded-full inline-block mr-4")
          %span= invite.related.full_name
        .actions
          = link_to "Cancel", invite_path(invite), method: :delete, class: "inline-block py-2 px-4 border-2 border-red-800 rounded-lg text-red-800 font-bold"
